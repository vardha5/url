  <style>
    .navbar {
      /* background-color: #343a40; Dark color */
      background-color: #5819e4; /* Dark color */
    }

    .navbar-brand,
    .nav-link {
      color: #f8f9fa !important; /* Light color */
      font-weight: bolder;
    }

    .navbar-toggler {
      border-color: rgba(248, 249, 250, 0.5);
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3E%3Cpath stroke='rgba(248, 249, 250, 0.5)' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
    }

    .navbar-toggler-icon.open {
      background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3E%3Cpath stroke='rgba(248, 249, 250, 0.5)' stroke-width='2' d='M5 5 L25 25 M25 5 L5 25'/%3E%3C/svg%3E");
    }
  </style>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
      <a class="navbar-brand" href="/">Quick Links</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon" id="navbarIcon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/#about">About</a>
            <!-- Added About link -->
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#features">Features</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#pricing">Pricing</a>
            <!-- Updated to link correctly -->
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/page/contact">Contact</a>
          </li>

          <script>
            const token = localStorage.getItem("token");
            if (!token) {
              document.write(`
              <li class="nav-item">
                <a class="nav-link" href="/auth/page/login/">Log In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth/page/register/">Register</a>
              </li>
            `);
            } else {
              document.write(`
              <li class="nav-item">
                <a class="nav-link" href="/page/url">Shorten URL</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/page/profile">Profile</a> <!-- Added Profile link -->
              </li>
              <li class="nav-item " role="button">
                <a class="nav-link"  onclick="logout()">Log Out</a>
              </li>
            `);
            }

            function logout() {
              localStorage.removeItem("token");
              window.location.href = "/"; // Redirect to home after logout
            }
          </script>
        </ul>
      </div>
    </nav>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const navbarToggler = document.querySelector(".navbar-toggler");
        const navbarIcon = document.getElementById("navbarIcon");

        navbarToggler.addEventListener("click", function () {
          navbarIcon.classList.toggle("open");
        });
      });
    </script>
  </body>
</html>
